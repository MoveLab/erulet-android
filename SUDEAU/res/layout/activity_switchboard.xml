<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/btn_info"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="1"
        android:background="@drawable/selectorcolors_light"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dip"
        android:contentDescription="Informació general"
        android:src="@drawable/info_btn" 
        android:onClick="sendMessage"/>

    <ImageView
        android:id="@+id/btn_routes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_weight="1"
        android:background="@drawable/selectorcolors_light"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dip"
        android:src="@drawable/routes_btn"
        android:contentDescription="Itineraris" />

    <ImageView
        android:id="@+id/btn_spc_eco"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="1"
        android:background="@drawable/selectorcolors_light"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dip"
        android:src="@drawable/spc_eco_btn"
        android:contentDescription="Espai/ecosistema a visitar" />

    <ImageView
        android:id="@+id/btn_refinfo"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="1"
        android:background="@drawable/selectorcolors_light"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dip"
        android:src="@drawable/refinfo_btn"
        android:contentDescription="Informació de referència" />

    <ImageView
        android:id="@+id/btn_other_usrs"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="1"
        android:background="@drawable/selectorcolors_light"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dip"
        android:src="@drawable/other_users_btn"
        android:contentDescription="Accés a informació compartida per altres usuaris" />
    
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:src="@drawable/municipality_logo" />        
    
</LinearLayout>