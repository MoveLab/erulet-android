<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/mapDetail"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/dark_grey"
        android:gravity="center"
        android:text="Seguiment itinerari..."
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"        
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/btn_stop_tracking"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"            
            android:background="#AFFF"
            android:padding="5dp"
            android:text="Aturar seguiment" />

        <Button
            android:id="@+id/btn_add_content"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#AFFF"
            android:padding="5dp"            
            android:text="Afegir observaciÃ³" />                
        
        <Button
            android:id="@+id/btn_compass_to_point"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#AFFF"
            android:padding="5dp"            
            android:text="Navegar a punt..." />
            
    </LinearLayout>

</RelativeLayout>