<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="6dip" >
    
    <ImageView
        android:id="@+id/route_pic"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"        
        android:src="@drawable/ic_itinerary_icon" />
     
     <TextView
         android:id="@+id/route_name"
         android:layout_width="100dip"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/route_pic"
         android:layout_alignTop="@+id/route_pic"
         android:layout_alignParentTop="true"
         android:layout_alignWithParentIfMissing="true"         
         android:layout_toRightOf="@id/route_pic"
         android:background="@color/dark_grey"
         android:textColor="@color/white"
         android:gravity="center_vertical"
         android:text="Nom de la ruta"
         android:textSize="12sp" />
     
     <TextView
         android:id="@+id/route_description"
         android:layout_width="125dip"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/route_pic"
         android:layout_marginLeft="6dip"
         android:layout_alignTop="@+id/route_pic"
         android:layout_alignParentTop="true"
         android:layout_alignWithParentIfMissing="true"         
         android:layout_toRightOf="@id/route_name"
         android:background="@color/dark_grey"
         android:textColor="@color/white"
         android:gravity="center_vertical"
         android:text="DescripciÃ³ de la ruta"
         android:textSize="12sp" />
     
     <ImageView
         android:id="@+id/route_upload"
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:layout_alignBottom="@+id/route_pic"
         android:layout_alignTop="@+id/route_pic"
         android:layout_marginLeft="6dip"
         android:layout_alignParentTop="true"         
         android:layout_toRightOf="@id/route_description"         
         android:contentDescription="TODO"
         android:src="@drawable/ic_upload" />
     
     <ImageView
         android:id="@+id/route_edit"
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:layout_alignBottom="@+id/route_pic"
         android:layout_alignTop="@+id/route_pic"
         android:layout_marginLeft="6dip"
         android:layout_alignParentTop="true"         
         android:layout_toRightOf="@id/route_upload"
         android:contentDescription="TODO"
         android:src="@drawable/ic_edit" />

</RelativeLayout>
